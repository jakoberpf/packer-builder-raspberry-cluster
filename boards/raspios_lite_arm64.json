{
  "variables": {},
  "builders": [{
    "type": "${CONFIG_PACKER_TYPE}",
    "file_urls" : ["https://downloads.raspberrypi.org/raspios_lite_${CONFIG_RASPIOS_ARCH}/images/raspios_lite_${CONFIG_RASPIOS_ARCH}-${CONFIG_RASPIOS_VERSION}/${CONFIG_RASPIOS_FILE}.zip"],
    "file_checksum_url": "https://downloads.raspberrypi.org/raspios_lite_${CONFIG_RASPIOS_ARCH}/images/raspios_lite_${CONFIG_RASPIOS_ARCH}-${CONFIG_RASPIOS_VERSION}/${CONFIG_RASPIOS_FILE}.zip.sha256",
    "file_checksum_type": "sha256",
    "file_target_extension": "zip",
    "image_build_method": "resize",
    "image_path": "${CONFIG_RASPIOS_IMAGE_OUTPUT}",
    "image_size": "${CONFIG_IMAGE_SIZE}",
    "image_type": "${CONFIG_IMAGE_TYPE}",
    "image_partitions": [
      {
        "name": "boot",
        "type": "c",
        "start_sector": "8192",
        "filesystem": "vfat",
        "size": "256M",
        "mountpoint": "/boot"
      },
      {
        "name": "root",
        "type": "83",
        "start_sector": "532480",
        "filesystem": "ext4",
        "size": "0",
        "mountpoint": "/"
      }
    ],
    "image_chroot_env": ["PATH=/usr/local/bin:/usr/local/sbin:/usr/bin:/usr/sbin:/bin:/sbin"],
    "qemu_binary_source_path": "/usr/bin/${CONFIG_QEMU_BINARY}",
    "qemu_binary_destination_path": "/usr/bin/${CONFIG_QEMU_BINARY}"
  }],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "touch /ssh"
      ]
    },
    {
      "type": "shell",
      "inline": [
        "mv /etc/resolv.conf /etc/resolv.conf.bk",
        "echo 'nameserver 8.8.8.8' > /etc/resolv.conf"
      ]
    },
    {
      "type": "file",
      "source": "scripts/tools",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "script": "scripts/bootstrap.sh"
    }
  ]
}
